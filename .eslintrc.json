{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script",
        "ecmaFeatures": {}
    },
    "extends": "eslint:recommended",
    "rules": {
        "semi": [2, "always"],
        "no-console": ["error", {
            "allow": ["log"]
        }],
        "no-empty": ["error", {
            "allowEmptyCatch": true
        }],
        "no-unused-vars": ["error", {
            "varsIgnorePattern": "r2dec_",
            "args": "none"
        }]
    },
    "globals": {
        "Global": true,
        "Duktape": true,
        "require": true,
        "include": true,
        "read_file": true,
        "module": true,
        "console": true
    }
}